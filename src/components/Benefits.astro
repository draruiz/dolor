<section class='benefits' id='beneficios'>
  <!-- Celestial Background Image -->
  <div class='benefits-bg-image'></div>

  <!-- Background Pattern -->
  <div class='benefits-bg'>
    <svg width='100%' height='100%' xmlns='http://www.w3.org/2000/svg'>
      <defs>
        <pattern
          id='flower-pattern'
          x='0'
          y='0'
          width='60'
          height='60'
          patternUnits='userSpaceOnUse'
        >
          <circle cx='30' cy='30' r='1.5' fill='#d4af37' opacity='0.1'></circle>
          <path
            d='M30 10 Q40 30 30 50 Q20 30 30 10'
            fill='none'
            stroke='#d4af37'
            stroke-width='0.5'
            opacity='0.05'></path>
          <path
            d='M10 30 Q30 40 50 30 Q30 20 10 30'
            fill='none'
            stroke='#d4af37'
            stroke-width='0.5'
            opacity='0.05'></path>
        </pattern>
      </defs>
      <rect width='100%' height='100%' fill='url(#flower-pattern)'></rect>
    </svg>
  </div>

  <div class='container'>
    <div class='benefits-header fade-in'>
      <span class='section-subtitle'>Tu Renacer</span>
